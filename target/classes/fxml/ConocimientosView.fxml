<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="view" spacing="5.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
	<children>
		<TableView fx:id="conocimientoTable" HBox.hgrow="ALWAYS">
			<columns>
				<TableColumn prefWidth="75.0" text="Denominadoción">
					<cellValueFactory>
						<PropertyValueFactory property="denominacion" />
					</cellValueFactory>
				</TableColumn>
				<TableColumn prefWidth="75.0" text="Nivel">
					<cellValueFactory>
						<PropertyValueFactory property="nivel" />
					</cellValueFactory>
				</TableColumn>
			</columns>
			<columnResizePolicy>
				<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
			</columnResizePolicy>
		</TableView>
		<VBox spacing="5.0">
			<children>
				<Button fx:id="addKnowButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Añadir conocimiento" />
				<Button fx:id="addLanguageButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Añadir idioma" />
				<Button fx:id="deleteButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Eliminar" />
			</children>
			<padding>
				<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
			</padding>
		</VBox>
	</children>
</HBox>
